<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Solving Linear Equation in two Variable"
                    android:textColor="#000"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Elimination Method\n 1)	6x+5y=16\n\n4x+5y=14\n"
                    android:textColor="#555"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="false"
                android:ellipsize="end"
                android:textColor="#555"
                android:inputType="textMultiLine"
                android:text="6x+5y=16       --(1)\n\n4x+5y=14        --(2)\n\nSubtracting equation (2) from (1)\n\n
                6x+5y=16\n
                - 4x+5y=14\n
             -------------------------\n"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal">

                     <com.google.android.material.textfield.TextInputLayout
                                 android:layout_width="100dp"
                                 android:layout_height="wrap_content"
                                 style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                               <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:id="@+id/blank1"
                                android:textColor="#555"
                                android:layout_marginRight="20dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"  />
                     </com.google.android.material.textfield.TextInputLayout>

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:hint="x   ="
                         android:textColor="#555"
                         android:layout_marginRight="20dp" android:layout_gravity="center"
                         android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                         />
                     <com.google.android.material.textfield.TextInputLayout
                         android:layout_width="100dp"
                         android:layout_height="wrap_content"
                         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                     <com.google.android.material.textfield.TextInputEditText
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:inputType="number"
                         android:id="@+id/blank2"                                            
                         android:textColor="#555"
                         android:textAppearance="@style/TextAppearance.AppCompat.Medium"/></com.google.android.material.textfield.TextInputLayout>
                   </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="x =1/2 ×"
                        android:textAlignment="center"
                        android:textColor="#555"
                        android:layout_marginRight="20dp" android:layout_gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:id="@+id/blank3"
                        android:textColor="#555"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    </com.google.android.material.textfield.TextInputLayout>
                  </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="x = "
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="#555"
                        android:layout_marginRight="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:id="@+id/blank4"
                        android:textColor="#555"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    </com.google.android.material.textfield.TextInputLayout>
                  </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#555"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="\nSubstituting x=1 in equation (1)\n"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="6× "
                        android:textAlignment="center"
                        android:textColor="#555"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:id="@+id/blank5"
                            android:textColor="#555"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=" +5y=16"
                        android:textAlignment="center"
                        android:textColor="#555"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:id="@+id/blank6"
                            android:textColor="#555"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint=" +5y=16"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="#555"
                        android:layout_marginRight="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="5y=16-"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="#555"
                        android:layout_marginRight="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:id="@+id/blank7"
                            android:textColor="#555"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="5y = "
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="#555"
                        android:layout_marginRight="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:id="@+id/blank8"
                            android:textColor="#555"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="y = 1/5 × "
                        android:textAlignment="center"
                        android:textColor="#555"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:id="@+id/blank9"
                            android:textColor="#555"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="y ="
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="#555"
                        android:layout_marginRight="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:id="@+id/blank10"
                            android:textColor="#555"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Solution is x = 1, y = "
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="#555"
                        android:layout_marginRight="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:id="@+id/blank11"
                            android:textColor="#555"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/show_answar"
                    android:layout_gravity="center"
                    android:text="Check Answar"
                     />

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
</ScrollView>